@page
@model AhmadBooks.BMS.Web.Pages.Groups.Admin.IndexModel
@using AhmadBooks.BMS.Localization
@using AhmadBooks.BMS.Permissions
@using AhmadBooks.BMS.Web.Pages.Groups
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<BMSResource> L
@inject IAuthorizationService AuthorizationService

@section scripts
{
    <abp-script src="/Pages/Admin/Groups/Index.js"/>
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Groups"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                @if (await AuthorizationService
                    .IsGrantedAsync(BMSPermissions.Groups.Create))
                {
                    <abp-button id="NewGroupButton"
                                text="@L["NewGroup"].Value"
                                icon="plus"
                                button-type="Primary"/>
                }
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="GroupsTable"></abp-table>
    </abp-card-body>
</abp-card>
